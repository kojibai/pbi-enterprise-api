{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pbi.kojib.com/schemas/pbi-chal-1.0.schema.json",
  "title": "PBI Challenge Record (pbi-chal-1.0)",
  "type": "object",
  "additionalProperties": false,
  "required": ["ver", "challengeId", "challenge", "actionHash", "aud", "purpose", "expiresAt", "usedAt"],
  "properties": {
    "ver": { "const": "pbi-chal-1.0" },
    "challengeId": { "type": "string", "minLength": 1 },
    "challenge": { "type": "string", "minLength": 16 },
    "actionHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "aud": { "type": "string", "minLength": 1 },
    "purpose": { "type": "string", "minLength": 1 },
    "expiresAt": { "type": "string", "format": "date-time" },
    "usedAt": { "type": ["string", "null"], "format": "date-time" }
  }
}